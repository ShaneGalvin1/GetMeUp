<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.shane.getmeup" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".AlarmListActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ChooseAlarmActivity"
            android:label="@string/title_activity_choose_alarm"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".WalkSetupActivity"
            android:label="@string/title_activity_walk_setup"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".TalkSetupActivity"
            android:label="@string/title_activity_talk_setup"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".ShakeSetupActivity"
            android:label="@string/title_activity_shake_setup"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".PlaySetupActivity"
            android:label="@string/title_activity_play_setup"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".EditAlarmActivity"
            android:label="@string/title_activity_edit_alarm"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".ActiveAlarmActivity"
            android:label="@string/title_activity_active_alarm"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
    </application>

</manifest>
